@model List<Csharp.Models.Note>

<h2>Moje poznámky</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" asp-action="Add" class="note-form">
    <input type="text" name="Title" placeholder="Nadpis" required />
    <textarea name="Content" placeholder="Obsah poznámky" required></textarea>
    <button type="submit">Přidat poznámku</button>
</form>

<p class="filter-links">
    <a asp-action="Index" asp-route-onlyImportant="false">Všechny poznámky</a> |
    <a asp-action="Index" asp-route-onlyImportant="true">Pouze důležité</a>
</p>

<form method="post" asp-controller="Account" asp-action="DeleteAccount"
      onsubmit="return confirm('Opravdu chcete zrušit svůj účet? Tato akce je nevratná!');">
    <input type="password" name="password" placeholder="Zadejte heslo" required />
    <button type="submit" class="btn btn-danger">Zrušit účet</button>
</form>

<table class="notes-table">
    <thead>
        <tr>
            <th>Nadpis</th>
            <th>Obsah</th>
            <th>Datum</th>
            <th>Důležité</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Content</td>
                <td>@note.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>
                    <form asp-action="ToggleImportant" method="post" class="inline-form">
                        <input type="hidden" name="id" value="@note.Id" />
                        <button type="submit" class="btn-simple">@((note.IsImportant) ? "Ano" : "Ne")</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" method="post" class="inline-form">
                        <input type="hidden" name="id" value="@note.Id" />
                        <button type="submit" class="btn-simple btn-danger">Smazat</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin-bottom: 20px;
    }

    .note-form {
        display: flex;
        flex-direction: column;
        max-width: 400px;
        margin-bottom: 20px;
    }

        .note-form input[type="text"],
        .note-form textarea {
            padding: 8px 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
            font-family: inherit;
            resize: vertical;
        }

        .note-form button {
            width: 120px;
            padding: 8px 12px;
            font-size: 1rem;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
            align-self: flex-start;
        }

            .note-form button:hover {
                background-color: #0056b3;
            }

    .filter-links {
        margin-bottom: 15px;
        font-family: inherit;
    }

        .filter-links a {
            color: #007bff;
            text-decoration: none;
            margin: 0 5px;
            transition: color 0.3s ease;
        }

            .filter-links a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

    .notes-table {
        width: 100%;
        border-collapse: collapse;
        font-family: inherit;
        margin-bottom: 40px; /* přidáno odsazení pod tabulku */
    }

        .notes-table th, .notes-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
            vertical-align: top;
        }

        .notes-table th {
            background-color: #f2f2f2;
        }

    .inline-form {
        display: inline;
    }

    .btn-simple {
        background: none;
        border: none;
        color: #007bff;
        cursor: pointer;
        font-size: 1rem;
        padding: 0;
        font-family: inherit;
    }

        .btn-simple:hover {
            text-decoration: underline;
        }

    .btn-danger {
        color: ghostwhite;
    }

        .btn-danger:hover {
            color: ghostwhite;
        }

    /* Styl pro formulář zrušení účtu */
    form[asp-action="DeleteAccount"] {
        display: inline-flex;
        align-items: center;
        margin: 30px 0;
        max-width: 400px;
        font-family: inherit;
    }

        form[asp-action="DeleteAccount"] input[type="password"] {
            padding: 8px 10px;
            margin-right: 10px;
            font-size: 1rem;
            border: 1px solid #dc3545;
            border-radius: 4px;
            flex-grow: 1;
            box-sizing: border-box;
        }

        form[asp-action="DeleteAccount"] button {
            padding: 8px 16px;
            font-size: 1rem;
            background-color: #dc3545;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 120px;
            vertical-align: middle;
        }

            form[asp-action="DeleteAccount"] button:hover {
                background-color: #a71d2a;
            }
</style>
