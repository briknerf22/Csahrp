@model Csharp.Models.AccountViewModel

<!-- Přidej Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row">
        <!-- Registrace vlevo -->
        <div class="col-md-6">
            <h2>Registrace</h2>
            <form asp-action="Register" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Register.Username" class="form-label"></label>
                    <input asp-for="Register.Username" class="form-control" />
                    <span asp-validation-for="Register.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Register.Password" class="form-label"></label>
                    <input asp-for="Register.Password" type="password" class="form-control" />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Register.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Register.ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="Register.AiTrainingConsent" type="checkbox" class="form-check-input" />
                    <label asp-for="Register.AiTrainingConsent" class="form-check-label">
                        Souhlasím, že mnou vložená data mohou být využita pro trénink AI
                    </label>
                    <span asp-validation-for="Register.AiTrainingConsent" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registrovat</button>
            </form>
        </div>

        <!-- Přihlášení vpravo -->
        <div class="col-md-6">
            <h2>Přihlášení</h2>
            <form asp-action="Login" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Login.Username" class="form-label"></label>
                    <input asp-for="Login.Username" class="form-control" />
                    <span asp-validation-for="Login.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Login.Password" class="form-label"></label>
                    <input asp-for="Login.Password" type="password" class="form-control" />
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Přihlásit se</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
